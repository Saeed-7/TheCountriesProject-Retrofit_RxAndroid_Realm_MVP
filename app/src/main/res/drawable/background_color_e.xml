<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/main_color_a"
                android:endColor="@color/main_color_b"
                android:angle="90" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/main_color_b"
                android:endColor="@color/main_color_a"
                android:angle="45" />
        </shape>
    </item>
</selector>